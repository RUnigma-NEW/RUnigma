	@echo git fetching $1
	$(eval DIR_$(1) ?= $(buildprefix)/$(1)-git)
	$(eval SRC_URI_$(1) += $(2))
	@echo 'setting dir DIR_$(1)=$(DIR_$(1))'
	@echo 'setting uri SRC_URI_$(1)=$(SRC_URI_$(1))'
	if [ -d $(DIR_$(1)) ]; then \
		cd $(DIR_$(1)) && git pull; \
	else \
		git clone $(2) $(DIR_$(1)); \
	fi
endef

